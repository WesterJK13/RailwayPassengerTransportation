@{
    Layout = "_LayoutAuthorize";
    List<Train> trains = (List<Train>)ViewData["trains"];
    int num = 1;
}

<h3>Список поездов</h3>
<a asp-action="Index" class="btn btn-secondary mb-3">Назад</a>
<a data-bs-toggle="modal" data-bs-target="#addTrain" class="btn btn-success mb-3">Добавить</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-center">№</th>
            <th class="text-center">Просмотр</th>
            <th>Наименование</th>
            <th class="text-center">Удалить</th>
            <th class="text-center">Редактировать</th>
        </tr>
    </thead>
    <tbody>
        @if (trains!=null) {
            @foreach (var item in trains)
            {
                <tr>
                    <td class="text-center">@num</td>
                    <td class="text-center"><a asp-action="AddTrain" asp-route-id="@item.Id" class="btn btn-primary">Просмотр</a></td>
                    <td>@item.Name</td>
                    <td class="text-center"><a asp-action="DeleteTrain" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a></td>
                    <td class="text-center"><a class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#editTrain_@item.Id">Редактировать</a></td>
                </tr>

                <div class="modal fade" id="editTrain_@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Редактирование поезда</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form asp-action="EditTrain">
                                <div class="modal-body">
                                    <label class="form-label">Наименование поезда</label>
                                    <input type="text" class="form-control" name="Name" value="@item.Name" />
                                    <input type="hidden" name="id" value="@item.Id">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отменить</button>
                                    <button type="submit" class="btn btn-success">Редактировать</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                num++;
            }
        }
    </tbody>
</table>
<div class="modal fade" id="addTrain" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Добавление поезда</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddTrain">
                <div class="modal-body">
                    <label class="form-label">Наименование поезда</label>
                    <input type="text" class="form-control" name="Name" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отменить</button>
                    <button type="submit" class="btn btn-success">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>
